<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TextView android:id="@+id/TVCountry"
		android:textStyle="bold"
		android:textColor="@color/PreferencesTextViewLabelTextColor"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="Country"/>
	<AutoCompleteTextView android:id="@+id/ACTVCountry"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
	<TextView android:id="@+id/TVCity"
		android:textStyle="bold"
		android:textColor="@color/PreferencesTextViewLabelTextColor"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="City"/>
	<AutoCompleteTextView android:id="@+id/ACTVCity"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
	<Button android:id="@+id/BTNDefaultLocationPreferencesOK"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/OK"/>
	<Button android:id="@+id/BTNDefaultLocationPreferencesCancel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/CANCEL"/>
</LinearLayout>
